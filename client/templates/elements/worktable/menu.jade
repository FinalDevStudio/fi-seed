mixin menu(active)
    div.page-header
        h2
            i.fa.fa-sr.fa-th-list
            |Mesa de trabajo

    p.btn-group.btn-group-justified
        a.btn.btn-default(
            ng-href='/worktable/ongoing',
            class=(active === 'ongoing' ? 'active' : ''))

            i.fa.fa-sr.fa-globe
            |Ver solicitudes en proceso

        if (specialist)
            a.btn.btn-default(
                ng-href='/worktable/waiting'
                class=(active === 'waiting' ? 'active' : ''))

                i.fa.fa-sr.fa-user-md
                |Ver solicitudes en espera
        
        else
            a.btn.btn-default(
                ng-href='/worktable/sent',
                class=(active == 'sent' ? 'active' : ''))

                i.fa.fa-sr.fa-globe
                |Ver solicitudes enviadas
